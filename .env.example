# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Status API
STATUS_API_SECRET=
TRACKER_API_URL=

# Brevo SMTP Configuration
# Host and port are safe defaults for Brevo
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
# Set your Brevo SMTP login (full email address) and SMTP key in .env.local
SMTP_USER=your-email@example.com
SMTP_PASS=your-brevo-smtp-key
# Optional: custom sender name and contact inbox
SMTP_FROM=Avasarams Contact <your-email@example.com>
CONTACT_EMAIL=your-contact@example.com

# Iubenda Privacy Policy
NEXT_PUBLIC_IUBENDA_POLICY_ID=

# Socials
NEXT_PUBLIC_SOCIAL_GITHUB=
NEXT_PUBLIC_SOCIAL_LINKEDIN=
NEXT_PUBLIC_SOCIAL_DEVTO=
DEVTO_USERNAME=
NEXT_PUBLIC_GA_MEASUREMENT_ID=
